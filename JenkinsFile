pipeline {
    agent any

    stages {
        stage('Install dependencies') {
            steps {
                sh 'pip3 install -r requirements.txt'
            }
        }
        stage('Install CodeQL') {
            steps {
                sh 'curl -L https://github.com/github/codeql-cli-binaries/releases/latest/download/codeql-linux64.zip -o codeql.zip'
                sh 'unzip codeql.zip -d /usr/local/bin'
                sh 'chmod u+x /usr/local/bin/codeql'
                sh 'rm codeql.zip'
            }
        }
        stage('Code analysis') {
            steps {
                sh 'python3 -m pylint run.py'
            }
        }
        stage('CodeQL analysis') {
            steps {
                withEnv(['GITHUB_TOKEN=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']) {
                    sh 'codeql database create --language=python --source-root=. --database=python-database'
                    sh 'codeql analyze --database=python-database --output=codeql-results.sarif'
                }
            }
        }

        stage('Run tests') {
            steps {
                sh 'pip3 install pytest'
                sh 'python3 -m pytest test.py'
            }
        }
        stage('Deploy') {
            steps {
                sh 'python3 run.py'
            }
        }
    }
}
