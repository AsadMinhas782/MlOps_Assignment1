pipeline {
    agent any

    stages {
        stage('Install dependencies') {
            steps {
                sh 'pip3 install -r requirements.txt'
            }
        }
        stage('Code analysis') {
            steps {
                sh 'python3 -m pylint run.py'
            }
        }
        stage('Run tests') {
            steps {
                sh 'pip3 install pytest'
                sh 'python3 -m pytest test.py'
            }
        }
        stage('Deploy') {
            steps {
                sh 'python3 run.py'
            }
        }
    }
}
